{
	"name": "electron-angular-webpack",
	"version": "1.0.0",
	"description": "A simple kit for Electron, Angular 6 and Webpack 4 including a live reload system for Angular.",
	"repository": "https://github.com/lbassin/electron-angular-webpack",
	"homepage": "https: //github.com/lbassin/electron-angular-webpack#readme",
	"bugs": {
		"url": "https://github.com/lbassin/electron-angular-webpack/issues"
	},
	"keywords": [
		"electron",
		"angular",
		"webpack",
		"boilerplate",
		"live reload",
		"typescript",
		"sass"
	],
	"author": "BASSIN Laurent & MARQUET Maxime",
	"license": "MIT",
	"main": "electron.js",
	"scripts": {
		"dev": "tsc electron.ts --outDir . && cross-env NODE_ENV=dev webpack-dev-server --port=4200 --hot",
		"prod": "webpack && electron dist/electron.js",
		"packager:win": "cross-env NODE_OS=win node builder/packager.js",
		"packager:mac": "cross-env NODE_OS=mac node builder/packager.js",
		"packager:linux": "cross-env NODE_OS=linux node builder/packager.js",
		"installer:win": "npm run packager:win && cross-env NODE_OS=win node builder/installer.js",
		"installer:mac": "npm run packager:mac && cross-env NODE_OS=mac node builder/installer.js",
		"installer:linux": "npm run packager:linux && cross-env NODE_OS=linux node builder/installer.js"
	},
	"devDependencies": {
		"@angularclass/hmr": "^2.1.3",
		"angular-router-loader": "~0.8",
		"angular2-template-loader": "~0.6",
		"awesome-typescript-loader": "~5.2",
		"clean-webpack-plugin": "^2.0.2",
		"concurrently": "^4.1.0",
		"copy-webpack-plugin": "^5.0.3",
		"cross-env": "^5.2.0",
		"css-loader": "^2.1.1",
		"electron-packager": "^13.1.1",
		"extract-loader": "^3.1.0",
		"file-loader": "^3.0.1",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
		"imagemin": "^6.1.0",
		"img-loader": "^3.0.1",
		"lodash": "^4.17.11",
		"node-sass": "^4.12.0",
		"postcss-loader": "^3.0.0",
		"raw-loader": "^2.0.0",
		"resolve-url-loader": "^3.1.0",
		"sass-loader": "^7.1.0",
		"ts-loader": "^6.0.0",
		"typescript": "~3.4",
		"uglifyjs-webpack-plugin": "^2.1.2",
		"underscore-template-loader": "^1.0.0",
		"url-loader": "^1.1.2",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.2",
		"webpack-dev-server": "^3.3.1"
	},
	"optionalDependencies": {
		"appdmg": "^0.5.2",
		"electron-installer-debian": "^1.2.0",
		"electron-installer-dmg": "^2.0.0",
		"electron-squirrel-startup": "^1.0.0",
		"electron-winstaller": "^3.0.4"
	},
	"dependencies": {
		"@angular/animations": "~7.2",
		"@angular/common": "~7.2",
		"@angular/compiler": "~7.2",
		"@angular/core": "~7.2",
		"@angular/forms": "~7.2",
		"@angular/platform-browser": "~7.2",
		"@angular/platform-browser-dynamic": "~7.2",
		"@angular/router": "~7.2",
		"@fortawesome/angular-fontawesome": "^0.3.0",
		"@fortawesome/fontawesome-svg-core": "^1.2.18",
		"@fortawesome/free-solid-svg-icons": "^5.8.2",
		"angular-in-memory-web-api": "^0.8.0",
		"autoprefixer": "^9.5.1",
		"core-js": "~3.0",
		"electron": "^5.0.1",
		"rxjs": "~6.5",
		"zone.js": "~0.9"
	}
}
